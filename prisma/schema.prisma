generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model property {
  id    Int    @id @default(autoincrement())
  key   String @unique
  value String
}

model user {
  id       Int    @id @default(autoincrement())
  email    String @unique
  name     String
  lastname String
  rut      Int    @unique
  rut_dv   Int
  password String @db.VarChar(3000)
  role     Role   @default(USER)
}

enum Role {
  USER
  ADMIN
  VET
}
