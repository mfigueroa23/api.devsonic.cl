generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model property {
  id    Int    @id @default(autoincrement())
  key   String @unique
  value String
}

model cors_domains {
  id          Int     @id @default(autoincrement())
  domain      String  @unique
  habilitated Boolean @default(false)
}

model layouts {
  id          Int    @id @default(autoincrement())
  name        String @unique
  description String
  content     String @db.VarChar(10000)
}

model users {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  name     String
  lastname String
  rut      Int      @unique
  rut_dv   Int
  password String   @db.VarChar(3000)
  role     Roles    @default(user)
  active   Boolean  @default(true)
  pets     pets[]
}

model pets {
  id          Int         @id @default(autoincrement())
  name        String
  born_year   Int
  born_month  BornMonth
  age         String
  weight      Float       @default(0)
  weight_unit WeightUnit  @default(kg)
  desease     Boolean     @default(false)
  owner_id    Int
  specie_id   Int
  breed       String
  owner       users       @relation(fields: [owner_id], references: [id])
  specie      pet_specie  @relation(fields: [specie_id], references: [id])
}

model pet_specie {
  id    Int    @id @default(autoincrement())
  name  String @unique
  pets  pets[]
}

enum WeightUnit {
  kg
  g
}

enum BornMonth {
  Enero
  Febrero
  Marzo
  Abril
  Mayo
  Junio
  Julio
  Agosto
  Septiembre
  Octubre
  Noviembre
  Diciembre
}

enum Roles {
  user
  admin
  vet
}
